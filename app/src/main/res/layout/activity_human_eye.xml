<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_dark">

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_connecting_volunteer"
        android:textSize="32sp"
        android:textColor="@color/color_text_light"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/status_connecting_volunteer"/>

    <Button
        android:id="@+id/btn_end_call"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Çağrıyı Sonlandır"
        android:textSize="24sp"
        android:backgroundTint="@color/color_warning"
        android:textColor="@color/color_text_light"
        android:contentDescription="Çağrıyı sonlandır düğmesi."
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>